shape tetra
	# vertices of a pyramid in a unit square
	points (0 0 0) (1 0 0) (0.5 0 -0.866) (0.5 1 -0.289)
	
	# polygons that form the pyramid
	polygon 0 1 3
	polygon 1 2 3
	polygon 2 0 3
	polygon 2 1 0
end

# start with an empty world
clear

# add horizon
horizon yes
shading gouraud
smooth no
dither yes

# light comes from above and behind
light (0 -1 -1) 1
diffuse 0.8

# red pyramid
save
color 0.5 0 0
translate (-1 0 -3)
rotate -30 (0 1 0)
add tetra

# yellow pyramid
restore
color 0.5 0.5 0
translate (1 0 -3)
rotate 30 (0 1 0)
add tetra
